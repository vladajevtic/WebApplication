@model IEnumerable<EmployeeDTO>

<h1>@ViewBag.Title</h1>

<div class="container">
    <a asp-controller="Employee" asp-action="EmployeeCreate">Create New</a>
    <div class="card-columns">
        @foreach (var employee in Model)
        {

            <div class="card card-user">
                <img class="card-img-top" src="@employee.ImagePath" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title text-black-50">@employee.Name</h4>
                    <p class="card-text text-black-50">Some example text some example text. John Doe is an architect and engineer</p>
                    <p class="card-text text-black-50">@employee.Email</p>
                    <a asp-controller="employee" asp-action="EmployeeDetails" asp-route-id="@employee.Id">See Profile</a>
                </div>
            </div>
        }
    </div>
</div>