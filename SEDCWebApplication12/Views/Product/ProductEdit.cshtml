@model Product;

<form asp-controller="Product" asp-action="ProductEdit" >
    <div class="form-group row">
        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" placeholder="@Model.ProductName" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UnitPrice" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UnitPrice" placeholder="@Model.UnitPrice" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" placeholder="@Model.Description" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Picture" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Picture" placeholder="Image" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Size" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Size" placeholder="Size" class="form-control" asp-items="Html.GetEnumSelectList<Size>()" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
</form>
