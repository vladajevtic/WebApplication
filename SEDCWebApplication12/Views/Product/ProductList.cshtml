@model IEnumerable<Product>


<div class="container">
    <div class="card-columns">
        @foreach (var product in Model)
        {

            <div class="card card-user bg-secondary text-light" >
                <img class="card-img-top" src="@product.Picture" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">@product.ProductName</h4>
                    <p class="card-text">Some example text some example text. John Doe is an architect and engineer</p>
                    <a class="bg-dark text-white"  asp-controller="Product" asp-action="ProductDetails" asp-route-id="@product.ProductId">See Profile</a>
                    <button class="btn-primary">@product.UnitPrice $</button>
                </div>
            </div>


        }
    </div>
</div>